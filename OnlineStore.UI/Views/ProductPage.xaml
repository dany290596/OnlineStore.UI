                Height="30"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,10,10,0"
                Background="Red"
                CornerRadius="100">
                <TextBlock 
                    Text="{Binding ShoppingCartCount}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="12" />
            </Grid>
