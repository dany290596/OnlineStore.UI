        <RelativePanel
            Grid.Row="1">
            <ScrollViewer
                RelativePanel.AlignHorizontalCenterWithPanel="True"
                RelativePanel.AlignVerticalCenterWithPanel="True">
                <StackPanel>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid
                            Grid.Row="0"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            >
                            <!--
                            <TextBlock
                                Name="Text1"
                                RelativePanel.AlignHorizontalCenterWithPanel="true"
                                FontSize="35"
                                FontStyle="Normal"
                                TextWrapping="WrapWholeWords"
                                FontWeight="Bold"
                                TextAlignment="Center"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="#1e3050"
                                RelativePanel.AlignTopWithPanel="True" RelativePanel.RightOf="CoverImage" 
                                Text="{Binding Title}" />
                            -->
                        </Grid>
                        <Grid
                            Grid.Row="1"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            >
                            <ListView
                                Background="#fff"
                                HorizontalAlignment="Stretch" 
                                VerticalAlignment="Stretch"
                                ItemsSource="{Binding ProductFilter}"    
                                IsItemClickEnabled="True">
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="model:Product">
                                        <StackPanel Margin="0, 0, 0, 0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <Grid
                                                Background="#fff"
                                                HorizontalAlignment="Stretch" 
                                                VerticalAlignment="Stretch"
                                                Width="Auto"
                                                Height="200"
                                                Margin="0, 0, 0, 0">
                                                <Grid.Shadow>
                                                    <ThemeShadow/>
                                                </Grid.Shadow>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="*" />
                                                    <RowDefinition Height="*" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Grid
                                                    VerticalAlignment="Top"
                                                    Grid.Row="0"
                                                    Grid.Column="0"
                                                    Grid.ColumnSpan="2"
                                                    Width="150" Height="Auto">
                                                    <Image 
                                                        VerticalAlignment="Top"
                                                        Source="{Binding ImageUrl}"
                                                        Stretch="UniformToFill"
                                                        FlowDirection="RightToLeft"
                                                        MaxWidth="150" MaxHeight="100">
                                                        <Image.RenderTransform>
                                                            <RotateTransform Angle="0"/>
                                                        </Image.RenderTransform>
                                                    </Image>
                                                </Grid>
                                                <TextBlock 
                                                    Foreground="#1e3050"
                                                    Grid.Row="1"
                                                    Grid.Column="0"
                                                    Grid.ColumnSpan="1"
                                                    Text="{Binding Name}"
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Center"
                                                    FontSize="12"
                                                    TextWrapping="WrapWholeWords"
                                                    FontWeight="Bold">
                                                </TextBlock>
                                                <TextBlock 
                                                    Foreground="#1e3050"
                                                    Grid.Row="1"
                                                    Grid.Column="1"
                                                    Grid.ColumnSpan="1"
                                                    Text="{Binding PriceMXN}"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Center"
                                                    FontSize="12"
                                                    TextWrapping="WrapWholeWords"
                                                    FontWeight="Bold">
                                                </TextBlock>
                                                <TextBlock
                                                    TextTrimming="CharacterEllipsis"
                                                    RelativePanel.AlignHorizontalCenterWithPanel="True"
                                                    RelativePanel.AlignVerticalCenterWithPanel="True"
                                                    Foreground="#1e3050"
                                                    Grid.Row="2"
                                                    Grid.Column="0"
                                                    Grid.ColumnSpan="2"
                                                    Text="{Binding Description}"
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch"
                                                    FontSize="10"
                                                    TextWrapping="Wrap"
                                                    FontWeight="Normal"
                                                    TextAlignment="Justify"
                                                    Width="Auto"
                                                    Height="Auto">
                                                </TextBlock>
                                                <Button
                                                    Background="#98FF98"
                                                    RelativePanel.AlignHorizontalCenterWithPanel="True"
                                                    RelativePanel.AlignVerticalCenterWithPanel="True"
                                                    Grid.Row="3"
                                                    Grid.Column="0"
                                                    Grid.ColumnSpan="2"
                                                    CornerRadius="2"                
                                                    Name="Button2"
                                                    Width="Auto"
                                                    Height="Auto"
                                                    VerticalAlignment="Stretch" 
                                                    HorizontalAlignment="Stretch"
                                                    Content="Agregar al carrito"
                                                    Command="{Binding DataContext.ShowModalCommand, ElementName=ParentGrid}"
                                                    CommandParameter="{Binding}">
                                                </Button>
                                            </Grid>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapGrid
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch"
                                            Orientation="Horizontal" 
                                            MaximumRowsOrColumns="4"
                                            ItemWidth="250" 
                                            ItemHeight="250" />
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>
                            </ListView>
                        </Grid>
                        <Grid
                            Grid.Row="2"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            >
                            <Button
                                Grid.Row="1"
                                Grid.Column="1"
                                Grid.ColumnSpan="2"
                                Background="#1e3050"
                                CornerRadius="2"                
                                Name="Button2"
                                Foreground="#FFFFFF"
                                FontSize="20"
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Center"
                                Content="Regresar"
                                Margin="0, 0, 0, 0"
                                Height="80"
                                Width="200"
                                Command="{Binding DataContext.CommandGoBack, ElementName=ParentGrid}"
                                CommandParameter="{Binding}">
                            </Button>
                        </Grid>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </RelativePanel>
    </Grid>
