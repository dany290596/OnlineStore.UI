        <RelativePanel
            RelativePanel.AlignHorizontalCenterWithPanel="true"
            HorizontalAlignment="Center" 
            VerticalAlignment="Center">
            <ScrollViewer
                HorizontalAlignment="Center" VerticalAlignment="Center"
                RelativePanel.AlignHorizontalCenterWithPanel="True"
                RelativePanel.AlignVerticalCenterWithPanel="True">
                <StackPanel
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock
                        Name="Text1"
                        RelativePanel.AlignHorizontalCenterWithPanel="true"
                        FontSize="35"
                        FontStyle="Normal"
                        TextWrapping="WrapWholeWords"
                        FontWeight="Bold"
                        TextAlignment="Center"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="#1e3050"
                        RelativePanel.AlignTopWithPanel="True" RelativePanel.RightOf="CoverImage" 
                        Text="{Binding Title}" />
                    <ListView
                        ItemsSource="{Binding Category}"
                        SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
                        IsItemClickEnabled="True"
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        RelativePanel.AlignHorizontalCenterWithPanel="True" 
                        RelativePanel.AlignVerticalCenterWithPanel="True">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:Category">
                                <!--<Border Background="White" BorderBrush="Gray" BorderThickness="1" CornerRadius="10" Margin="10" Padding="10">
                        <StackPanel Margin="10" Background="White" BorderBrush="Gray" BorderThickness="1" Padding="10">-->
                                <Grid
                                    RelativePanel.AlignTopWithPanel="True" 
                                    RelativePanel.RightOf="CoverImage" 
                                    RelativePanel.AlignHorizontalCenterWithPanel="True" 
                                    RelativePanel.AlignVerticalCenterWithPanel="True"
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Image 
                                        RelativePanel.AlignTopWithPanel="True" RelativePanel.RightOf="CoverImage" 
                                        RelativePanel.AlignHorizontalCenterWithPanel="True" 
                                        RelativePanel.AlignVerticalCenterWithPanel="True"
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="1"
                                        Source="{Binding ImageUrl}"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Height="Auto"
                                        Width="175" 
                                        FlowDirection="RightToLeft">            
                                        <Image.RenderTransform>
                                            <RotateTransform Angle="0" />
                                        </Image.RenderTransform>
                                    </Image>
                                    <TextBlock
                                        RelativePanel.AlignHorizontalCenterWithPanel="true"
                                        Foreground="#1e3050"
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="1"
                                        Text="{Binding Name}"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="16"
                                        TextWrapping="WrapWholeWords"
                                        FontWeight="Bold"
                                        TextAlignment="Center"
                                        RelativePanel.AlignTopWithPanel="True" RelativePanel.RightOf="CoverImage" >
                                    </TextBlock>
                                </Grid>
                                <!--</StackPanel>
                    </Border>-->
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapGrid
                                    RelativePanel.AlignTopWithPanel="True" RelativePanel.RightOf="CoverImage" 
                                    RelativePanel.AlignHorizontalCenterWithPanel="True" 
                                    RelativePanel.AlignVerticalCenterWithPanel="True"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal" 
                                    MaximumRowsOrColumns="3"
                                    ItemWidth="200" 
                                    ItemHeight="200" />
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                    </ListView>
                    <Button
                        Grid.Row="1"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        Background="#1e3050"
                        CornerRadius="2"                
                        Name="Button2"
                        Foreground="#FFFFFF"
                        FontSize="20"
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center"
                        Content="Regresar"
                        Margin="0, 0, 0, 0"
                        Height="80"
                        Width="200"
                        Command="{Binding CommandGoBack}">
                    </Button>
                </StackPanel>
            </ScrollViewer>
        </RelativePanel>
    </Grid>
</Page>